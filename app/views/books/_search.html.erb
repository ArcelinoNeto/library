<%= form_for(@search, url: books_path, method: :get)  do |form| %>

  <table cellpadding="0" cellspacing="0">
    <tbody>
      <tr>
        <td colspan="6" class="filter-title">Filters:</td>
      </tr>
      <tr>
        <td>
          <%= form.text_field :id, autocomplete: "id", type: "id", placeholder: "Id", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :created_above, autocomplete: "created_above", type: "created_above", placeholder: "Created Above", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :created_less, autocomplete: "created_less", type: "created_less", placeholder: "Created Less", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :publication_date_above, autocomplete: "publication_date_above", type: "publication_date_above", placeholder: "Publication_date Above", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :publication_date_less, autocomplete: "publication_date_less", type: "publication_date_less", placeholder: "Publication_date Less", class: "filter" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= form.text_field :title, autocomplete: "title", type: "title", placeholder: "Title", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :category, autocomplete: "category", type: "category", placeholder: "Category", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :author, autocomplete: "author", type: "author", placeholder: "Author", class: "filter" %>
        </td>
        <td>
          <%= form.text_field :publishing_company, autocomplete: "publishing_company", type: "publishing_company", placeholder: "Publishing Company", class: "filter" %>
        </td>
        <td style="text-align: center">
          <button class="button-search">
            <i class='bx bx-search' ></i> Search
          </button>         
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
