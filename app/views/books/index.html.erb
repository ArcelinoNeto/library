<h1><%= controller_name.titleize %></h1>

<%= render partial: 'search' %>

<table>
  <thead>
    <tr>
      <th style="width: 1%"></th>
      <th style="width: 2%">Id</th>
      <th>Title</th>
      <th >Description</th>
      <th>Category</th>
      <th>Author</th>
      <th>Publication date</th>
      <th style="width: 15%">Publishing company</th>
      <th>Created_at</th>
      <th colspan="2">
        <% if current_user.role == "librarian" %>
          <%= link_to new_book_path do %>
          <i class='bx bx-plus' ></i>
        <% end %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book do %>
            <i class='bx bx-show'></i>
          <% end %>
        </td>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.category %></td>
        <td><%= book.author %></td>
        <td><%= book.publication_date.to_date.to_s(:rfc822) %></td>
        <td><%= book.publishing_company %></td>
        <td><%= book.created_at.to_s(:short) %></td>
        <td>
          <% if current_user.role == "librarian" %>
            <%= link_to edit_book_path(book) do %>
              <i class="bx bx-edit" ></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if current_user.role == "librarian" %>
            <%= link_to book, method: :delete, data: { confirm: 'Do you really want to delete this book?' } do %>
              <i class='bx bx-x'></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
