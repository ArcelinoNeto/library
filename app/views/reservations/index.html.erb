<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Booking date</th>
      <th>Return date</th>
      <th>Booking status</th>
      <th>Book</th>
      <th>User</th>
      <th colspan="2">
        <%= link_to new_reservation_path do %>
          <i class='bx bx-plus' ></i>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td>
          <%= link_to reservation do %>
            <i class='bx bx-show'></i>
          <% end %>
        </td>
        <td><%= reservation.booking_date %></td>
        <td><%= reservation.return_date %></td>
        <td><%= reservation.booking_status %></td>
        <td><%= reservation.book_id %></td>
        <td><%= reservation.user_id %></td>
        <td>
          <%= link_to edit_reservation_path(reservation) do %>
            <i class='bx bx-edit'></i>
          <% end %>
        </td>
        <td>
          <%= link_to reservation, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class='bx bx-x'></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
