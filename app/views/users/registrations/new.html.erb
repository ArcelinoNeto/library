<section class="container forms">
  <div class="form signup">
    <div class="form-content">
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>

      <header>Signup</header>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", placeholder: "Email", class: "input" %>
        </div>
        <div class="field input-field">
          <%= f.password_field :password, autocomplete: "new-password", type: "password", placeholder:"Create password", class: "password" %>
        </div>
        <div class="field input-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", placeholder: "Confirm password", class: "password" %>
          <i class='bx bx-hide eye-icon'></i>
        </div>
        <div class="field button-field">
          <button>Signup</button>
        </div>
      <% end %>
    </div>
  </div>
</section>